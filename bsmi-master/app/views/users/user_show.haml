%p#notice= notice

.page-header
  %h1 
    = @user.name

.pull-right
  - if current_user.owner_type == "CalFaculty"
    = link_to 'Edit', advisor_edit_user_path(@user), :class => 'btn'
  = link_to_function "Back", "history.back()", :class => 'btn'

%h2 User Information

%table.table
  %tr
    %td
      %b User Type:
    %td
      = @user.owner_type
  %tr
    %td
      %b Name:
    %td
      = @user.name
  %tr
    %td
      %b Street Address:
    %td
      = @user.street_address
  %tr
    %td
      %b City:
    %td
      = @user.city
  %tr
    %td
      %b State:
    %td
      = @user.state
  %tr
    %td
      %b Zipcode:
    %td
      = @user.zipcode
  %tr
    %td
      %b Phone Number:
    %td
      = @user.phone_number
  %tr
    %td
      %b Email:
    %td
      = @user.email

