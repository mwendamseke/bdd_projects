= render :partial => "semester_header"

.pull-right
  = link_to 'New Course', new_cal_course_path(:semester_id => @semester.id), :class => 'btn btn-primary'
.page-header
  %h1 Cal Courses

%table.table.table-hover
  %tr
    %th= link_to 'Name', cal_courses_path(:sort => 'name')
    %th # timeslots
    %th # students
    %th
    %th
  - @cal_courses.each do |course|
    %tr
      %td= link_to course.name, cal_course_path(course, :semester_id => @semester.id)
      %td= course.timeslots.size
      %td= course.students.size
      %td= link_to 'Edit', edit_cal_course_path(course, :semester_id => @semester.id)
      %td= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }

