= form_for @deadline do |f|
  - if @deadline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@deadline.errors.count, "error")} prohibited this deadline from being saved:"
      %ul
        - @deadline.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :summary
    = f.text_area :summary
  .field
    = f.label :due_date
    = f.datetime_select :due_date
  .actions
    = f.submit 'Save', :class => "btn"
