= render :partial => "calendar_obj_script", :locals => {:data => timeslots, :read_only => read_only}

-# Code taken from https://github.com/themouette/jquery-week-calendar/blob/master/full_demo/weekcalendar_full_demo.html 
%div#calendar
  - unless read_only  
    %div{:id => 'event_edit_container', :style => "display: none;"}
      = form_for :timeslot do |f|
        = f.label(:class_name) 
        = select_tag(:class_name, options_for_select(course_names.map {|c| [c.name, c.id]}, :id => :class_name))
        = f.label(:start_time)      
        = f.time_select(:start_time, {:ampm => true}, :class => "start_time time_select")
    
        = f.label(:end_time)
        = f.time_select(:end_time, {:ampm => true}, :class => "end_time time_select")

        = f.label(:number_of_assistants)
        = select_tag(:max_num_assistants, options_for_select((1..3).map {|i| [i,i]}), :id => :max_num_assistants)


