<div class="new-organisation container" ng-controller="OpportunityNewCtrl">

	<div class="row">
		<div class="col-md-3"></div>
		<div class="org-form-wrapper col-md-6">
		<%= form_for @opportunity, url: organisation_opportunities_path, html: {multipart: true} do |f| %>

			<div class="field-wrapper col-md-12">
				<div class="file-field org-image opp-image">
					<%= f.label :image, 'Drag Thumbnail Here', class: 'opp-thumb-label' %>
					<%= f.file_field :image, required: true, data: {:"ng-file-select" => "onFileSelect($files)"}, class: 'opp-file-field'%>
					<img ng-show="imageSrc" ng-src="{{imageSrc}}" class="img-circle collection-preview" id="profile-pic" />
				</div>
			</div>

			<div class="row">
				<div class="col-md-12 title-field">
				<%= f.text_area :title, placeholder: 'Title' %>
				</div>
			</div>


			<div class="row">
				<div class="col-md-12 requirements-field">
					<%= f.label :requirements, class: 'requirements-label' %>
					<%= f.select(:requirements, options_for_select: [["Image", "images"], ["Text", "text"], ["Both Image and Text", "both images and text"]], value: 'Requirements') %>
				</div>	
			</div>

			<div class="row">
				<div class="col-md-12 description-field org-desc-field">
			<%= f.text_area :description, placeholder: 'Describe your opportunity' %>
				</div>
			</div>



			<div class="row org-wrap-sub">
				<div class="col-md-12">
			<%= f.submit 'Submit', class: 'form-submit org-submit' %>
				</div>
			</div>

		<% end %>

		</div>
		<div class="col-md-3"></div>
	</div>
</div>