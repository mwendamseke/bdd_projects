<% form_for [:my, @user] do |f| -%>
  
  <%= f.error_messages %>

  <fieldset>
    <%= f.label :first_name, t("user.first_name") %> <%= f.text_field :first_name %> <br />
    <%= f.label :last_name, t("user.last_name") %> <%= f.text_field :last_name %> <br />
  </fieldset>
  <fieldset>
    <%= f.label :email, t("user.email") %> <%= f.text_field :email %> <br />
  </fieldset>
  <fieldset>
    <%= f.label :password, t("user.password") %> <%= f.password_field :password %> <br />
    <%= f.label :password_confirmation, t("user.password_again") %> <%= f.password_field :password_confirmation %> <br />
  </fieldset>
  <%= f.submit t('forms.save') %> <%= t('forms.or') %> <%= link_to t('forms.cancel'), my_users_path %>
<% end -%>