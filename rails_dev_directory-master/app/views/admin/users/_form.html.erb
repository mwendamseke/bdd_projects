<% form_for [:admin, @user] do |f| -%>
  
  <%= f.error_messages %>

  <fieldset>
    <%= f.label :first_name, t("user.first_name") %> <%= f.text_field :first_name %> <br />
    <%= f.label :last_name, t("user.last_name") %> <%= f.text_field :last_name %> <br />
  </fieldset>
  <fieldset>
    <%= f.label :email, t("user.email") %> <%= f.text_field :email %> <br />
    <%= f.label :password, t("user.password") %> <%= f.password_field :password %> <br />
    <%= f.hidden_field :provider_id %>
    <% if @user.new_record? %>
      <ul>
        <li><%= f.check_box :send_welcome_message %> <%= f.label :send_welcome_message, t('user.send_welcome_message') %></li>
      </ul>
    <%- end -%>
    <%= f.label :admin, t("user.admin") %> <%= f.check_box :admin %> <br />
  </fieldset>
  <%= f.hidden_field :provider_id %>
  <%= f.submit t('forms.save') %> <%= t('forms.or') %> <%= link_to t('forms.cancel'), [:admin, @user.provider] %>
<% end -%>