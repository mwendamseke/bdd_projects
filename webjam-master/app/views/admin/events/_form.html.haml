= f.error_messages



%fieldset
  %label{ :for => "event_name" }
    Name *
    = f.text_field :name
    
  %label{ :for => "event_tag" }
    Tag (permalink and flickr tag. Must look like "webjam99") *
    = f.text_field :tag
    
  %label{ :for => "event_held_at" }
    Held at (DateTime) *
    = f.text_field :held_at
    
  %label{ :for => "event_location" }
    Location (Sydney, etc) *
    = f.text_field :location
    
  %label{ :for => "event_address" }
    Address (Bar Broadway, Sydney etc.) *
    = f.text_field :address
    
  %label{ :for => "event_timezone" }
    Timezone *
    = f.time_zone_select :timezone, TimeZone.all, :default => 'Sydney'
    
  %label{ :for => "event_rsvp_limit" }
    RSVP limit
    = f.text_field :rsvp_limit
    
  %label{ :for => "event_proposals_close_at" }
    Proposals close at (DateTime) *
    = f.text_field :proposals_close_at
    
  %label{ :for => "event_hype" }
    Hype (used on the homepage and event page) *
    = f.text_area :hype

  %label{ :for => "event_map_iframe_url" }
    Map iframe URL *
    = f.text_field :map_iframe_url

  %label{ :for => "event_map_url" }
    Map URL (for linking to bigger version) *
    = f.text_field :map_url
    
  %label{ :for => "event_campaign_monitor_list_id" }
    Campaign Monitor RSVP List ID
    = f.text_field :campaign_monitor_list_id
    
  %label{ :for => "event_published_at" }
    Published at (DateTime)
    = f.text_field :published_at

%fieldset
  = submit_tag "Save", :class => "submit"
