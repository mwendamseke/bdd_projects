.item
  %dl.peep-card.vcard{:id => "hcard-#{h utf8_slugify(@user.nick_name)}"}
    %dt.fn=h @user.full_name
    %dd.nickname.note
      %a{ :href => user_path(@user) }=h @user.nick_name
    - unless @user.website_url.blank?
      %dd.url
        = link_to h(@user.website_display_name), @user.website_url, :class => "url", :rel => "me"
    %dd.img
      - if @user.mugshot?
        = image_tag @user.mugshot.url(:large), :class => 'photo'
      - else
        = avatar_image(@user, :large)
    - if @user == current_user
      %dd
        %ul#profile-menu
          %li
            = link_to 'Edit details', edit_current_user_path
    /
      %dd.facets
        %ul
          %li
            %a{ :href => "http://twitter.com/dmitrybaranovsk" } twitter
          %li
            %a{ :href => "http://flickr.com/dmitrybaranovsk" } flickr
          %li
            %a{ :href => "http://github.com/dmitrybaranovsk" } github
          %li
            %a{ :href => "http://ma.gnolia.com/dmitrybaranovsk" } ma.gnolia  
      %dd.contact
        %a.button{ :href => "#" } Contact